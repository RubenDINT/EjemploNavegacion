<Window x:Class="EjemploNavegacion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjemploNavegacion"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Command="{Binding Path=AbrirUC1Command}">UC1</Button>
            <Button Command="{Binding Path=AbrirUC2Command}">UC2</Button>
        </StackPanel>
        <ContentControl Content="{Binding Path=Opcion}"></ContentControl>
    </DockPanel>
</Window>
